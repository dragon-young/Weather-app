<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dragon.app">

    <!--
        uses-permission 是 安卓的权限操作
        android.permission.INTERNET  就是连接网络的权限
    -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 程序一但进入，就和去加载UniteApp里面的代码 -->
    <application
        android:name=".base.UniteApp"
        android:allowBackup="true"
        android:icon="@mipmap/yiqu2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/yiqu2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".city_manage.CityManagerActivity" />
        <activity android:name=".city_manage.SearchCityActivity" />
        <activity android:name=".city_manage.DeleteCityActivity" />
        <activity android:name=".MoreActivity" />
        <activity
            android:name=".game.Game2048"
            android:screenOrientation="portrait" />
        <activity android:name=".game.GameSnack"></activity>
    </application>

</manifest>